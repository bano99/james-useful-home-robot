<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="james">

  <!-- Include AR4 Macro -->
  <xacro:include filename="$(find james_description)/urdf/ar4/ar_macro.xacro" />

  <!-- Base Link (Platform) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.45 0.56 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.45 0.56 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="20.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
  </link>

  <link name="base_footprint"/>
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/> <!-- Assumed platform height above ground -->
  </joint>

  <!-- Camera Tower (Obstacle/Camera Mount) -->
  <link name="camera_tower_link">
    <visual>
      <origin xyz="0 0 0.6" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 1.2"/>
      </geometry>
      <material name="silver">
        <color rgba="0.75 0.75 0.75 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.6" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 1.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0.6" rpy="0 0 0"/>
      <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="camera_tower_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_tower_link"/>
    <origin xyz="0 -0.35 0.05" rpy="0 0 0"/> <!-- Positioned at back of base (Y-) -->
  </joint>

  <!-- Instantiate AR4 Robot Arm -->
  <xacro:ar_robot 
    tf_prefix="arm_" 
    parent="base_link" 
    robot_parameters_file="$(find james_description)/config/ar4_custom_limits.yaml">
    <origin xyz="0.15 0 0.05" rpy="0 0 3.1415926" /> <!-- Forward is now +Y -->
  </xacro:ar_robot>

  <!-- Custom Gripper (Placeholder) -->
  <link name="gripper_link">
    <visual>
      <geometry>
        <box size="0.05 0.08 0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.08 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="gripper_joint" type="fixed">
    <parent link="arm_ee_link"/>
    <child link="gripper_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

</robot>
